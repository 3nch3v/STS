@{
    string keyWords = this.ViewData["Keyword"] as string;
}

<section class="tasks-side-bar-section">
    <section class="search-task-section">
        <form method="post" asp-controller="Tasks" asp-action="Index">
            <div>
                <input name="keyword"
                       type="text"
                       value="@(keyWords == null ? null : keyWords)"
                       class="search-input-field"
                       placeholder="Search..." />
            </div>
            <div>
                <input id="isActive"
                       name="isActive"
                       type="checkbox"
                       value="true">
                <label class="checkbox-label" for="isActive">
                    Only active
                </label>
                <button type="submit" class="tasks-search-btn">
                    Go
                </button>
            </div>
        </form>
    </section>

    <vc:tasks-side-bar is-manager=false tasks-count=TasksSideBarCount></vc:tasks-side-bar>

</section>
