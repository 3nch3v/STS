@using System.Security.Claims
@using STS.Web.ViewModels.Identity;

@model ChangePassInputModel;

@{
    ViewData["Title"] = "Profile Page";
    string currUserId = User.FindFirst(ClaimTypes.NameIdentifier).Value;
}

<article class="profile-wrapper">

    <vc:profile user-id="@currUserId"></vc:profile>

    <div>
        <section class="change-pass">
            <p>Change your password</p>
            <form id="account" class="change-pass-form" method="post" asp-controller="Home" asp-action="Profile">
                <div class="d-password">
                    <label asp-for="OldPass"></label>
                    <input asp-for="OldPass" type="password" class="old-pass" />
                    <span asp-validation-for="OldPass" class="text-danger"></span>
                </div>
                <div class="d-password">
                    <label asp-for="NewPass"></label>
                    <input asp-for="NewPass" type="password" class="new-pass" />
                    <span asp-validation-for="NewPass" class="text-danger"></span>
                </div>
                <div class="d-password">
                    <label asp-for="RepeatPass"></label>
                    <input asp-for="RepeatPass" class="repeat-pass" />
                    <span asp-validation-for="RepeatPass" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button class="change-pass-btn" type="submit">Change</button>
                </div>
            </form>
        </section>
    </div>
</article>