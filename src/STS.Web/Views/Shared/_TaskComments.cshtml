<section class="task-comments-wrapper">
    <div class="comments">
        <h5>Comments:</h5>
        @if (Model.Comments.Count > 0)
        {
            @foreach (var coment in Model.Comments)
            {
                <section class="task-comment" data-task-Id="@coment.Id">
                    <p class="task-content">@coment.Content</p>
                    <p class="task-manager username comment">
                        <span class="from-user">from</span> @coment.UserUserName
                    </p>
                </section>
            }
        }
        else
        {
            <p class="no-task-comments">No comments</p>
        }
    </div>
    <div class="task-comment-form-wrapper">
        <form method="post" class="task-comment-form">
            <div>
                <textarea for="content"
                          name="comment"
                          class="form-control comment-task-ta"
                          rows="1";
                          required
                ></textarea>
                <p class="reply-validation text-danger"></p>
            </div>
            <button type="button" class="c-btn task-btn">Post</button>
        </form>
    </div>
</section>










