@using STS.Web.ViewModels.Tasks
@model TaskInputModel

@{
    ViewData["Title"] = "Create Task";
}

<article class="c-wrapper">
    <form asp-area="Administration" asp-controller="Management" asp-action="Create" method="post" class="col-md-12 offser-md-8">
        <section class="select-group">
            <div class="p-select">
                <label asp-for="PriorityId">Priority</label>
                <select 
                    class="form-control-sm" 
                    asp-for="PriorityId" 
                    asp-items="Model.Priorities.Select(t => new SelectListItem(t.Name, t.Id.ToString()))"
                >
                </select>
                <span asp-validation-for="PriorityId" class="text-danger"></span>
            </div>
            <div class="p-select">
                <label asp-for="EmployeeId">Employee</label>
                <select 
                    class="form-control-sm" 
                    asp-for="EmployeeId" 
                    asp-items="Model.Employees.Select(t => new SelectListItem(t.UserName, t.Id))"
                >
                </select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
        </section>
        <div class="form-group t-tile">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" required>
            <span asp-validation-for="Title" class="text-danger title-validation"></span>

        </div>
        <div class="form-group t-description">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" rows="10" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group t-description">
            <label asp-for="Deadline">Deadline</label>
            <input type="datetime-local" asp-for="Deadline" min="@DateTime.Now" class="form-control" required>
            <span asp-validation-for="Deadline" class="text-danger"></span>
        </div>
        <div class="c-form-btns">
            <button type="submit" class="c-btn">Create</button>
            <button class="cancel-btn" type="button">Cancel</button>
        </div>
    </form>
</article>