<article class="comment-wrapper">
    <form method="post" class="comment-form">
        <div class="form-group">
            <label for="content">Comment:</label>
            <textarea for="content"
                      name="comment"
                      class="form-control comment-ta"
                      rows="5"
                      required></textarea>
        </div>
        <div>
            <p class="comment-validation text-danger"></p>
        </div>
        <div class="switch-box">
            <label class="switch">
                <input id="send-email-check" type="checkbox" name="send-email" for="send-email">
                <span class="slider round"></span>
            </label>
            <label for="send-email">  Send email notification</label>
        </div>
        <div class="c-form-btns">
            <button type="submit" class="c-btn">Post</button>
            <button class="cancel-c-btn" type="button">Cancel</button>
        </div>
    </form>
</article>