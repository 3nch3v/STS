@using Microsoft.AspNetCore.Identity
@using STS.Data.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav flex-grow-1">

        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Tickets" asp-action="Tickets">Tickets</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Tasks" asp-action="Index">Tasks</a>
        </li>

        @if (User.IsInRole(AdministratorRoleName) || User.IsInRole(ManagerRoleName))
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Administration" asp-controller="Management" asp-action="Index">Management</a>
            </li>
        }
        @if (User.IsInRole(AdministratorRoleName))
        {
            <li class="nav-item">
                <a class="nav-link text-danger" asp-area="Administration" asp-controller="Administration" asp-action="Index" title="Admin">Admin</a>
            </li>
        }
    </ul>
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline " asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white">Logout</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav"></ul>

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </ul>
}

